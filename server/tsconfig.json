{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types", "../node_modules/@types"],
    "paths": {
      "@cumc/shared-types": ["../shared/types"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": false,
    "files": true
  }
}
